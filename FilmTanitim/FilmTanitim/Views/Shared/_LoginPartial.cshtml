@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hoşgeldin @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  style="padding-right:10px" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-warning text-white">ÇIKIŞ</button>
        </form>
    </li>
}
else
{
    <li class="nav-item"style="padding-right:10px" >
        <a class="nav-link btn btn-primary text-white" asp-area="Identity" asp-page="/Account/Register">KAYIT OL</a>
    </li>
    <li style="padding-right:10px" class="nav-item" >
        <a class="nav-link btn btn-success text-white" asp-area="Identity" asp-page="/Account/Login">GİRİŞ</a>
    </li>
}
</ul>
