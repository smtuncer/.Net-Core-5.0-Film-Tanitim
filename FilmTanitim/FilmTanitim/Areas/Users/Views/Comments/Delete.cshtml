@model FilmTanitim.Models.Comment

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Yorum Sil</h1>

<h3>Yorumu Silmek İstediğinizden Emin misiniz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Yorum Başlığı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CommentTitle)
        </dd>
        <dt class="col-sm-2">
            Yorum Açıklaması
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CommentDescription)
        </dd>
        <dt class="col-sm-2">
            Yorumun Ait Olduğu Film
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.MovieName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-warning">Geri Dön</a>
    </form>
</div>
